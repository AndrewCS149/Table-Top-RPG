@model Crypts_And_Coders.

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<h1>Create</h1>

<h4>Character</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CharacterDTO.Name" class="control-label"></label>
                <input asp-for="CharacterDTO.Name" class="form-control" />
                <span asp-validation-for="CharacterDTO.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CharacterDTO.WeaponId" class="control-label"></label>
                <input asp-for="CharacterDTO.WeaponId" class="form-control" />
                <span asp-validation-for="CharacterDTO.WeaponId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CharacterDTO.LocationId" class="control-label"></label>
                <input asp-for="CharacterDTO.LocationId" class="form-control" />
                <span asp-validation-for="CharacterDTO.LocationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Species</label>
                <select class="form-control">
                    @foreach(string speciesName in Enum.GetNames(typeof(Model.SpeciesAndClass.Species)))
                    {
                    <option>@speciesName</option>
                    }
                </select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Class</label>
                <select class="form-control"></select>
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CharacterDTO.UserName" class="control-label"></label>
                <input asp-for="CharacterDTO.UserName" class="form-control" />
                <span asp-validation-for="CharacterDTO.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

